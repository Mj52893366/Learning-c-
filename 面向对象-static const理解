int Date::count = 0;
Date::Date(int y, int m, int d)        //构造器
{
    count++;
    year = y;month = m;day = d;
}
Date::Date(const Date &obj){
    count++;
    year = obj.year;
    month = obj.month;
    day = obj.day;
}
void Date::print() const
{
    cout<<year<<'_'
        <<month<<'_'
        <<day<<'\n';
}
void Date::showCount()
{
    cout<<"当前日期个数:"
        <<count<<"个\n";
}


Date fun(Date a)
{
    Date b = a;
    return b;
}
int main(){
    Date d1(2006, 1, 10);
    Date d2(2008, 2, 16);
    d1.print();
    d1.showCount();
    d2.print();
    d2.showCount();
    d2 = fun(d1);
    d1.showCount();
    d2.showCount();
    Date d3 = fun(d1);
    d1.showCount();
    d2.showCount();
    d3.showCount();
}
